<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:showIn="@layout/activity_mega_sena"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trevo_megasena"
            android:paddingTop="@dimen/padding_top"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left"
            android:paddingBottom="@dimen/padding_bottom"
            android:contentDescription="@string/trevo_megasena"
            android:id="@+id/imageViewMegaSena"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="63dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MegaSena"
            android:textColor="@color/cormegasena"
            style="@style/fontesEstilo"
            android:id="@+id/textViewMegaSena"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewMegaSena"
            android:layout_toEndOf="@+id/imageViewMegaSena"
            android:layout_marginTop="86dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/valorAcumulado"
            android:textSize="@dimen/tamFontePadrao"
            style="@style/fonteLblDescricao"
            android:text="@string/lblValorProximoPremio"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textQuartoResultado"
            android:layout_alignLeft="@+id/textQuartoResultado"
            android:layout_alignStart="@+id/textQuartoResultado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proximoPremio"
            android:text="@string/valorZerado"
            style="@style/fonteValorDescricao"
            android:layout_below="@+id/valorAcumulado"
            android:layout_alignRight="@+id/textQuintoResultado"
            android:layout_alignEnd="@+id/textQuintoResultado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acumuladoProximoConcurso"
            android:text="@string/lblAcumuladoProximoConcurso"
            style="@style/fonteLblAcumuladoProximoCurso"
            android:layout_below="@+id/proximoPremio"
            android:layout_alignLeft="@+id/textQuartoResultado"
            android:layout_alignStart="@+id/textQuartoResultado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valorAcumuladoProximoConcurso"
            android:text="@string/valorZerado"
            style="@style/fonteValorDescricao"
            android:layout_below="@+id/acumuladoProximoConcurso"
            android:layout_alignLeft="@+id/proximoPremio"
            android:layout_alignStart="@+id/proximoPremio"
            android:paddingBottom="@dimen/padding_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acumuladoMegaVirada"
            android:text="@string/lblAcumuladoMegaDaVirada"
            style="@style/fonteLblAcumuladoMegaDaVirada"
            android:layout_below="@+id/valorAcumuladoConcursoCinco"
            android:layout_alignLeft="@+id/textAcumuladoConcursoFinal"
            android:layout_alignStart="@+id/textAcumuladoConcursoFinal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valorMegaVirada"
            android:text="@string/valorZerado"
            style="@style/fonteValorDescricao"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/acumuladoMegaVirada"
            android:layout_alignLeft="@+id/valorAcumuladoConcursoCinco"
            android:layout_alignStart="@+id/valorAcumuladoConcursoCinco" />

        <TextView
            android:id="@+id/textPrimeiroResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:text="@string/primeiroValor"
            android:layout_marginTop="27dp"
            android:padding="20dp"
            android:layout_below="@+id/imageViewMegaSena"
            android:layout_alignLeft="@+id/imageViewMegaSena"
            android:layout_alignStart="@+id/imageViewMegaSena"
            android:layout_marginLeft="-10dp" />

        <TextView
            android:id="@+id/textSegundoResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/segundoValor"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_alignTop="@+id/textPrimeiroResultado"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textTerceiroResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terceiroValor"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_alignTop="@+id/textSegundoResultado"
            android:layout_alignRight="@+id/textViewMegaSena"
            android:layout_alignEnd="@+id/textViewMegaSena"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <TextView
            android:id="@+id/textQuartoResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quartoValor"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_below="@+id/textPrimeiroResultado"
            android:layout_alignLeft="@+id/textPrimeiroResultado"
            android:layout_alignStart="@+id/textPrimeiroResultado"
            android:layout_marginTop="39dp" />

        <TextView
            android:id="@+id/textQuintoResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quintoValor"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_alignTop="@+id/textQuartoResultado"
            android:layout_alignLeft="@+id/textSegundoResultado"
            android:layout_alignStart="@+id/textSegundoResultado" />

        <TextView
            android:id="@+id/textSextoResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sextoValor"
            android:textSize="25sp"
            android:background="@drawable/circulo_megasena"
            android:textColor="@color/branco"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_alignTop="@+id/textQuintoResultado"
            android:layout_alignLeft="@+id/textTerceiroResultado"
            android:layout_alignStart="@+id/textTerceiroResultado" />

        <TextView
            android:id="@+id/textAcumuladoConcursoFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblAcumuladoConcursoFinal"
            android:textSize="@dimen/tamFontePadrao"
            style="@style/fonteLblDescricao"
            android:layout_alignBottom="@+id/valorAcumuladoProximoConcurso"
            android:layout_alignLeft="@+id/acumuladoProximoConcurso"
            android:layout_alignStart="@+id/acumuladoProximoConcurso" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valorAcumuladoConcursoCinco"
            android:text="@string/valorZerado"
            style="@style/fonteValorDescricao"
            android:layout_below="@+id/textAcumuladoConcursoFinal"
            android:layout_alignLeft="@+id/valorAcumuladoProximoConcurso"
            android:layout_alignStart="@+id/valorAcumuladoProximoConcurso" />
        
    </RelativeLayout>
</ScrollView>