                    android:layout_marginTop="@dimen/margin_top_table_row"
                    android:layout_marginBottom="@dimen/margin_bottom_table_row"
                    android:layout_marginRight="@dimen/margin_right_table_row"
                    android:layout_marginLeft="@dimen/margin_left_table_row"/>

                <TextView
                    android:id="@+id/resultadoLotoFacilNono"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="04"
