                    android:layout_marginLeft="@dimen/margin_left_table_row"/>

            </TableRow>

            <TableRow
                android:id="@+id/segundoTableRow"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:divider="@color/preto"
                android:layout_marginLeft="@dimen/margin_left_table">

                <TextView
                    android:id="@+id/resultadoLotoFacilSexto"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
